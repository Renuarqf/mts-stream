.channel(class=(channelSize == 'md') ? 'channel-md' : '' class=(channelMode == 'inside') ? 'channel-inside' : '')
	a(href="#" style="background-image:url(assets/images/content/channel-img-1.jpg)").channel__preview
	a(href="#").channel__status
		case liveStatus
			when 'true'
				.channel__status-icon.icon-live
				.channel__status-name В эфире
			default
				.channel__status-icon
					svg.icon
						use( xlink:href="#record-icon" )
				.channel__status-name Запись
	.channel__data
		a(href="#" style="background-image:url(assets/images/content/avatar-4.jpg)").channel__avatar
		a(href="#").channel__stream-name NaVi vs. Team Liquid [Inferno] Map 2 - Semi Final
		.channel__line
			a(href="#").channel__name КаналИмениМеняВеликого1111pwnz
			case liveStatus
				when 'true'
					.channel__stats
						.stat-one.stat-one-rec
							.stat-one__icon
								svg.icon
									use( xlink:href="#viewers-live" )
							.stat-one__value
								| 243 987
						.stat-one
							.stat-one__icon
								svg.icon
									use( xlink:href="#favorite-icon" )
							.stat-one__value
								| 423 987
				default
					.channel__stats
						.stat-one
							.stat-one__icon
								svg.icon
									use( xlink:href="#viewers-all" )
							.stat-one__value
								| 423 987
						.stat-one
							.stat-one__icon
								svg.icon
									use( xlink:href="#time-icon" )
							.stat-one__value
								| 2:30:56
		.channel__tags
			ul.tags-list
				li
					a(href="#").tag-link.tag-stream
						.tag-link__img(style="background-image:url(assets/images/content/avatar-3.png)")
						.tag-link__name BobtheMan
				li
					a(href="#").tag-link
						.tag-link__name Без мата
